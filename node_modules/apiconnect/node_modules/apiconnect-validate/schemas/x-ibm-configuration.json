{
  "id": "https://api.ibm.com/x-ibm-configuration/schema.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "A schema to represent the IBM specific API configuration",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "rest",
        "wsdl",
        "oauth"
      ],
      "default": "rest"
    },
    "wsdl-definition": {
      "type": "object",
      "required": [
        "wsdl",
        "soap-version"
      ],
      "additionalProperties": false,
      "properties": {
        "wsdl": {
          "type": "string"
        },
        "service": {
          "type": "string"
        },
        "port": {
          "type": "string"
        },
        "soap-version": {
          "type": "string"
        },
        "parser-version": {
          "type": "string"
        }
      }
    },
    "oauth2": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "client-type": {
          "type": "string",
          "enum": [
            "public",
            "confidential"
          ]
        },
        "scopes": {
          "$ref": "#/definitions/oauth2Scopes"
        },
        "scope-validators": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "application": {
              "$ref": "#/definitions/url-with-tls-profile"
            },
            "owner": {
              "$ref": "#/definitions/url-with-tls-profile"
            }
          }
        },
        "grants": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "application",
              "password",
              "accessCode",
              "implicit"
            ]
          },
          "uniqueItems": true
        },
        "identity-extraction": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "default-form",
                "basic",
                "custom-form",
                "redirect"
              ],
              "default": "default-form"
            },
            "redirect-url": {
              "type": "string"
            },
            "custom-form": {
              "$ref": "#/definitions/url-with-tls-profile"
            }
          }
        },
        "authentication": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "x-ibm-authentication-registry": {
              "type": "string"
            },
            "x-ibm-authentication-url": {
              "$ref": "#/definitions/url-with-tls-profile"
            }
          }
        },
        "authorization": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "default-form",
                "custom-form",
                "authenticated"
              ],
              "default": "authenticated"
            },
            "custom-form": {
              "$ref": "#/definitions/url-with-tls-profile"
            }
          }
        },
        "access-token": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "ttl": {
              "type": "integer",
              "default": 3600,
              "minimum": 1,
              "maximum": 63244800
            }
          }
        },
        "refresh-token": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "count"
          ],
          "properties": {
            "count": {
              "type": "integer",
              "default": 0,
              "minimum": 0,
              "maximum": 4096
            },
            "ttl": {
              "type": "integer",
              "default": 2682000,
              "minimum": 2,
              "maximum": 252979200
            }
          }
        },
        "maximum-consent": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "ttl": {
              "type": "integer",
              "default": 0,
              "minimum": 0,
              "maximum": 2529792000
            }
          }
        },
        "revocation": {
          "oneOf": [
            {
              "type": "object",
              "required": [
                "url"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "url"
                  ],
                  "default": "url"
                },
                "url": {
                  "type": "string"
                },
                "tls-profile": {
                  "type": "string"
                }
              }
            },
            {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "type"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "gateway"
                  ]
                }
              }
            }
          ]
        },
        "metadata": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "metadata-url": {
              "$ref": "#/definitions/url-with-tls-profile"
            }
          }
        }
      }
    },
    "targets": {
      "type": "object",
      "additionalProperties": true
    },
    "assembly": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "execute"
      ],
      "properties": {
        "execute": {
          "$ref": "#/definitions/assembly-execute"
        },
        "catch": {
          "type": "array"
        }
      }
    },
    "analytics" : {
      "type": "object",
      "additionalProperties": false,
      "properties" : {
        "mappings": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties" : {
              "schema": {
                "type" : "object",
                "additionalProperties" : true,
                "properties": {
                  "in": {
                    "type" : "string",
                    "enum" : [
                        "header",
                        "payload"
                    ]
                  },
                  "location": {
                    "type" : "string",
                    "enum" : [
                        "header",
                        "payload"
                    ]
                  }
                }
              },
              "from": {
                "type": "string",
                "enum" : [
                    "request",
                    "response"
                ]
              },
              "es-type": {
                "type": "string",
                "enum" : [
                  "keyword",
                  "text",
                  "long",
                  "integer", 
                  "short",
                  "double",
                  "float",
                  "geo_point"
                ]
              } 
            },
            "required": [
              "schema",
              "from",
              "es-type"
            ]
          }
        }
      }
    },
    "enforced": {
      "type": "boolean"
    },
    "phase": {
      "type": "string",
      "enum": [
        "identified",
        "specified",
        "realized"
      ]
    },
    "testable": {
      "type": "boolean"
    },
    "cors": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "enabled"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "application-authentication": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "certificate": {
          "type": "boolean"
        }
      }
    },
    "properties": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "value": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "encoded": {
            "type": "boolean"
          }
        }
      }
    },
    "catalogs": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "properties": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      }
    },
    "gateway": {
      "type": "string",
      "enum": [
        "micro-gateway",
        "datapower-gateway"
      ],
      "default": "micro-gateway"
    },
    "attachments": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/attachment"
      }
    },
    "externalDocs": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/externalDoc"
      }
    },
    "extensions": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "default": {
    "enforced": true,
    "phase": "realized",
    "testable": true,
    "cors": {
      "enabled": true
    },
    "application-authentication": {
      "certificate": false
    }
  },
  "definitions": {
    "assembly-execute": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "url-with-tls-profile": {
      "type": "object",
      "required": [
        "url"
      ],
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string"
        },
        "tls-profile": {
          "type": "string"
        }
      }
    },
    "oauth2Scopes": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "attachment": {
      "type": "object",
      "required": [
        "id"
      ],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "id": {
          "type": "string"
        }
      }
    },
    "externalDoc": {
      "type": "object",
      "required": [
        "url"
      ],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      }
    }
  }
}
