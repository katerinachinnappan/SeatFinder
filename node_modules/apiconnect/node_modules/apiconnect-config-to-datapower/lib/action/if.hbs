{{#if rule}}
{{#each rule.actions}}
{{> (-deref-action this)}}

{{/each}}

api-rule {{rule._name}}
  reset
  {{#each rule.actions}}
  action {{_name}}
  {{/each}}
exit

assembly-switch {{_name}}
  reset
  case "{{{-add-escape this.condition}}}" {{rule._name}}
exit
{{/if}}
