assembly-setvar {{_name}}
  reset
  {{#if title}}summary "{{{-add-escape title}}}"{{/if}}
  {{#each actions}}
  variable
    {{!-- clear action only needs variable name--}}
    {{#if clear}}action clear
    name "{{clear}}"
    {{else}}{{#if set}}action set
    name "{{set}}"{{/if}}
    {{#if add}}action add
    name "{{add}}"{{/if}}
    {{#if type}}type {{type}}
    value "{{{-add-escape value}}}"
    {{!-- if type is not specified, then check value to decide to type--}}
    {{else}}{{-variable-type-by-value value}}
    value "{{{-add-escape value}}}"{{/if}}{{/if}}
  exit
  {{/each}}
exit
