{{#if _tokenSecret}}
crypto
  sskey {{_tokenSecret.name}} {{_tokenSecret.url}}
exit
{{/if}}

oauth-provider-settings {{_name}}
  reset
  provider-type apic
  {{#if basePath}}apic-provider-base-path {{basePath}}{{/if}}
  {{#if apic-authorize-endpoint}}apic-authorize-endpoint {{apic-authorize-endpoint}}{{/if}}
  {{#if apic-token-endpoint}}apic-token-endpoint {{apic-token-endpoint}}{{/if}}
  {{#if apic-enable-introspection}}apic-enable-introspection {{apic-enable-introspection}}{{/if}}
  {{#if apic-introspect-endpoint}}apic-introspect-endpoint {{ apic-introspect-endpoint}}{{/if}}
  {{#if apic-token-secret}}apic-token-secret {{apic-token-secret.name}}{{/if}}
  {{#if apic-access-token-ttl}}apic-access-token-ttl {{apic-access-token-ttl}}{{/if}}
  {{#if apic-maximum-consent-ttl}}apic-maximum-consent-ttl {{apic-maximum-consent-ttl}}{{/if}}
  {{#if apic-enable-refresh-token}}apic-enable-refresh-token {{apic-enable-refresh-token}}{{/if}}
  {{#if apic-refresh-token-ttl}}apic-refresh-token-ttl {{apic-refresh-token-ttl}}{{/if}}
  {{#if apic-refresh-token-limit}}apic-refresh-token-limit {{apic-refresh-token-limit}}{{/if}}
  scopes-allowed {{_scopes}}
  supported-grant-types {{_grants}}
  supported-client-types {{_clients}}
exit
