.apim
  ul.header-items
    absolute: top 12px right 15px
    text-align: left
    vertical-align: middle
    white-space: nowrap

    button
      color: white
      font-size: small
      line-height: 20px

    .helpLogo
      background-color: white
      border-radius: 50%
      color: black
      font-size: 12px
      font-weight: bold
      height: 16px
      line-height: 16px
      width: 16px

    > li
      border-left-width: 0
      color: #000000
      display: block
      float: left
      font-size: .9em
      line-height: 1.0em
      margin: 0
      margin-left: 20px
      padding: 6px 0

      > a
        display: block
        margin: 8px 0 14px

        &:hover
          text-decoration: none

  .header-branding
    display: block
    margin: 2px 6px 2px 0px !important // @stylint ignore important
    padding: 0

  &.mobile .header-items .separator
    display: none

  .white-caret
    color: white
