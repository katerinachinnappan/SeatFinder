.sg-hint
  cursor: pointer
  position: relative
  z-index: 2

  .sg-hint-text
    absolute: top 20px right 20px
    background-color: #f2f2f2
    border-radius: 3px
    box-shadow: 5px 5px 10px 0 #d8d8d8
    color: #000
    font-size: 15px
    line-height: 1.2
    min-height: 100px
    padding: 25px
    width: calc(100% - 500px)

  .sg-hint-text:after
    absolute: right 90px bottom 100px
    border-bottom: 15px solid #f2f2f2
    border-left: 15px solid transparent
    border-right: 15px solid transparent
    content: ' '
    size: 0

  p
    margin-top: 6px

  .sg-hint-subtext
    font-size: 14px

