.apim table.scrollableTable
  border: solid 1px #e0e0e0

  thead
  .thead
    display: table
    table-layout: fixed
    width: 100%

  tbody
    display: block
    max-height: 120px
    overflow-x: hidden
    overflow-y: scroll
    position: relative
    table-layout: fixed
    width: 100%

    tr
      &.selected
      &:hover
        background-color: #ECEFFF

  tr
    &
    &:hover
      border-color: #e0e0e0
      border-left: 0
      border-right: 0
      box-shadow: .0 .0 rgba(0, 0, 0, 0)
      display: table
      table-layout: fixed
      width: 100%

      td
        background-color: inherit

    td
      &
      &:hover
        background-color: inherit
        border-color: #e0e0e0
        box-shadow: .0 .0 rgba(0, 0, 0, 0)
        overflow: hidden

    th
      padding: 5px 10px

.tooltipContainer .tooltip
  display: inline-block
  font-size: 14px
  width: 300px

  // common bullseye styles
  .tooltip-arrow::after
    content: ' '
    display: block
    font-size: xx-large
    position: relative
    size: 75px

  .tooltip-inner
    max-width: none
    text-align: inherit

  // left-right specific styles for bullseye
  &.left .tooltip-arrow::after
    left: -30px
    top: -37px

  &.right
    margin-left: 20px

    .tooltip-arrow::after
      left: -45px
      top: -38px

  &.bottom
    margin-top: 40px

    .tooltip-arrow
      left: 42%

      &::after
        left: -40px
        top: -59px

    .tooltip-inner
      margin-left: 36px
      width: 200px

  &.bottomGentooltip
    margin-left: 36px
    margin-top: -31px !important // @stylint ignore important

.exploreMenu
  .exploreMenuItem
    cursor: pointer
    padding-bottom: 10px
    padding-left: 20px
    padding-top: 10px
    width: 400px

    li
      color: black
      cursor: pointer

    .dropdown-header
      padding-left: 20px

    :hover
      background-color: #f2f2f2
  hr
    margin-bottom: 7px
    margin-top: 0

// Getting started panel
.gettingStarted
  absolute: right 15px bottom 130px
  transition: all 1s ease
  width: calc(100% - 80%)

  &.ng-hide
    size: 0

  a
    &:hover
    &:focus
      text-decoration: underline

  .wraplist
    width: 100%

  md-bottom-sheet.md-list
    border: 1px solid #d8d8d8
    padding: 0
    transition: all 1s linear

    .md-subheader
      border-bottom: 1px solid #d8d8d8
      line-height: 20px

      .md-subheader-inner
        padding: 16px 15px

        .md-subheader-content
          align-items: center
          display: flex
          flex-direction: row

    md-list-item
      padding-left: 15px
      padding-right: 15px

      .material-icons
        font-size: 14px
        margin-right: 4px
        margin-top: 0
        vertical-align: middle

      .md-list-item-content
      .material-icons
        &:hover
          text-decoration: underline

      &.disabled
        cursor: not-allowed
        pointer-events: none

        .md-list-item-content
        .material-icons
          color: #888 !important // @stylint ignore important
          cursor: not-allowed

        > div
          cursor: not-allowed
          pointer-events: none

      &.completed
        // background-color: #ECEFFF

        .md-list-item-content
          color: #444 !important // @stylint ignore important

        .material-icons
          color: green !important // @stylint ignore important

      &:last-child
        border-bottom: none

  md-icon
    min-height: 0
    min-width: 0
    size: 14px

.gettingStartedMinimized
  absolute: right 50px bottom 75px
  opacity: 1
  size: 25px
  transition: all 1s linear

.gettingStartedMinimized.ng-hide
