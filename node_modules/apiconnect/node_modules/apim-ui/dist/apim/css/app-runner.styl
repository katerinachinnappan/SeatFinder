.apim
  .app-runner-subnav
    padding: 1rem

  .runner-console-container
    margin: 1rem

    ul
      border: 1px solid silver
      margin: .5rem
      padding: .5rem

      li
        font-family: monospace

  .process-entry
    color: #000 !important // @stylint ignore important

  .app-url
    color: #333 !important // @stylint ignore important

  loading-icon()
    background-image: embedurl('../images/busy16.gif')
    background-repeat: no-repeat
    display: inline-block
    height: 16px
    margin: 0 .5rem 0 0
    vertical-align: middle
    width: 16px

  .runner-status-busy
    .loading-icon
      loading-icon()

  .runner-status
    &.runner-status-running
      color: green
      .loading-icon
        loading-icon()


    &.runner-status-stopped
      color: gray
