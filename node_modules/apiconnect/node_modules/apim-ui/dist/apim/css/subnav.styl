.apim
  .mainBanner
    nav.subBanner,
    li.subBanner
      height: 50px

    nav.subBanner
      .material-icons.smallIcon
        margin-right: 5px
        vertical-align: middle

  .navigationMenu
    .subBanner
      padding: 10px 15px

      button
        width: 100%

        span:first-of-type
          float: left

      .dropdown-menu
        a
          padding: 6px 20px 6px 25px

          &:hover
            background-color: #f0f0f0

        .selectedOrg
          a:before
            content: '\25cf'
            left: 10px
            position: absolute

  nav.subBanner
    .menuList
      li
        height: 49px
        padding: 17px 20px 8px
        text-align: center

  .subBanner
    background-color: white
    border-bottom: 1px solid #e0e0e0
