apic-amp
  background: #ffffff
  display: block
  fixed: bottom left
  width: 100%
  z-index: 100

  .amp-menu-bar
    align-items: center
    border: 1px solid #e0e0e0
    border-left: none
    border-right: none
    display: flex
    flex-direction: row
    height: 3rem
    list-style: none

    &:active
      outline: 0

    li
      border-right: 1px solid #e0e0e0
      line-height: 15px
      padding: 0 1rem

      &.amp-menu-bar-controls
        white-space: nowrap

      &.right
        border-left: 1px solid #e0e0e0
        border-right: 0

      &.fill
        border: 0
        flex-grow: 1

      button
        border: 0
        color: #a1aaa9
        min-height: auto
        min-width: auto
        padding: 0

        span
          vertical-align: middle

      button:not(:disabled):hover
      button:not(:disabled):focus
        background: transparent
        color: #4b68fa

  .amp-body-main
    display: none

    &.amp-body-maximize
    &.amp-body-minimize
      display: block
      height: calc(100% - 3rem)

apic-amp-logs
  display: block
  height: 100%

  md-tabs.amp-log-container
    min-height: 100% !important // @stylint ignore important
    overflow: auto
