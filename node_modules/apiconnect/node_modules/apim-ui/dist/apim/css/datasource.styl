.apim
  .cliCommand
    background-color: #f5f5f5
    border: 1px solid #ccc
    border-radius: 4px
    color: #333333
    display: inline-block
    font-family: monospace
    margin: 0 2px
    padding: 0 5px
    vertical-align: middle

  .unavailable
    color: #999

  .install-connector-modal

    .spinner-container
    .spinner
    .icon-container
      display: inline-block
      margin: 0
      size: 3rem

    .spinner-container
    .icon-container
      margin-right: 1.5rem

    .spinner
      background: linear-gradient(to right, $green-1 10%, rgba(255, 255, 255, 0) 42%)

      &:before
        background-color: $green-1

    .icon-container
      margin-right: 1rem

      i
        font-size: 3rem

      .success
        color: $green-1

      .error
        color: $red-1

    h1
      align-items: center
      display: flex
      justify-content: center

    .installation-error
    .installation-success
      h1
        align-items: center
        justify-content: flex-start

      .content
        margin-bottom: 1rem
        padding-left: 4rem

        .error-message
          margin-bottom: 1rem

      footer
        align-items: flex-end
        display: flex
        justify-content: flex-end
        margin-top: 1rem
