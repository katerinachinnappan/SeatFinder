@media all and (-ms-high-contrast:active), all and (-ms-high-contrast:none)
  .bx--modal.bx--modal-tall .bx--modal-content
    height: auto

.toolkit--progress-indicator
  padding: 20px 0

  .bx--progress-selectRadio
    padding-top: 15px

  svg
    border-radius: 50%
    height: 1.5rem
    margin-bottom: .5rem
    position: relative
    transition: fill 250ms
    width: 1.5rem
    z-index: 1

  .bx--progress-indicator__step p
    max-width: 10rem

  .bx--progress-indicator__step:after, .bx--progress-indicator__step:before
    top: .5rem
    width: calc(100% - .7rem)

  .bx--progress-indicator__step--complete:after, .bx--progress-indicator__step--complete:before
    top: .5rem
    width: calc(100% - .7rem)

  .bx--progress-indicator__step--complete circle
    fill: transparent
    stroke: #3d70b2
    stroke-width: 5

  .bx--progress-indicator__step--complete polygon
    fill: #3d70b2

  .bx--progress-indicator__step--active circle:first-child
    fill: transparent
    stroke: #3d70b2
    stroke-width: 5

  .bx--progress-indicator__step--active circle:last-child
    fill: #3d70b2

  .bx--progress-indicator__step--incomplete circle
    fill: transparent
    stroke: #8c9ba5
    stroke-width: 5

.bx--progress-errors
  padding-top: 15px

  p:first-child
    font-size: 20px

.toolkit--select-version
  .bx--radio-button-group
    label
      margin-right: 20px

.bx--progress-infoBlock
  padding-top: 15px

  p
    font-size: 14px
    font-style: italic
