.apim
  .json-schema-form
    padding: 5px 20px

    .row
      margin-left: 0
      margin-right: 0
      
    button
      background-color: white
      border: 0
      border-radius: 0
      color: #4b68fa
      font-weight: bold
      padding: 0 5px
      text-decoration: underline
      width: 35px

      &:not(:disabled)
        &:hover,
        &:focus
          background-color: inherit
          color: #4b68fa

      &.json-editor-btn-edit
        & + div
          border: inherit !important // @stylint ignore important
          box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .2), 0 1px 1px 0 rgba(0, 0, 0, .14), 0 2px 1px -1px rgba(0, 0, 0, .12) !important // @stylint ignore important

    .btn-group
      float: right

      &:after
        clear: both
        content: ' '

      button
        &.delete-all,
        &.delete-last
          display: none

    h3 .btn-group
      margin-right: -26px

    .form-control
      border-radius: 0
      border-width: 0 0 1px 0
      box-shadow: none

      &:focus
        border-bottom-color: #4b68fa
        border-bottom-width: 2px

    select.form-control
      -webkit-appearance: none

    .self-clear:after
      clear: both
      content: ''
      display: block
      height: 0
      visibility: hidden

    .well
      background-color: inherit
      border: 0
      box-shadow: none

      &.self-clear
        margin-bottom: 0

    .well-sm
      border-radius: 0

      .well-sm
        padding-left: 20px

    div[data-schematype='array'] > .well > div >
      div[data-schematype='object'] > h3
        padding-left: 10px

      .well
      div[data-schematype='object'] // @stylint ignore colons
        border-left: 4px solid #4b68fa
        margin: 8px 0

    .col-md-12
    .well-sm
      padding-left: 0
      padding-right: 0

  apim-api-editor .json-schema-form .btn-group
    margin-right: -11px

  .has-feedback label ~ .form-control-feedback
    top: 17px

.json-schema-form
  & > div > div > h3
    display: none
