.bx--cardmod
  box-shadow: 0 3px 3px 0 rgba(0, 0, 0, .1)
  flex-direction: column
  size: 300px 380px

.cards-title
  color: #5a6872
  display: inline-block
  font-size: 1.5em
  line-height: 40px
  margin-left: 10px
  overflow: hidden
  text-decoration: none
  text-overflow: ellipsis
  white-space: nowrap
  width: 192px

.cards-title:hover
  text-decoration: underline

.svg-link
  fill: #5a6872

.svg-delete
  fill: #5a6872

.svg-notfav
  fill: #5a6872

.svg-fav
  fill: #efc100

.svg-nofill
  fill: none

button:hover
svg:hover
  .svg-link
  .svg-delete
    fill: #7cc7ff

  .svg-notfav
    fill: #efc100

.fav-space
  bottom: 40px
  right: 35px

.delete-space
  bottom: 40px
  right: 10px
