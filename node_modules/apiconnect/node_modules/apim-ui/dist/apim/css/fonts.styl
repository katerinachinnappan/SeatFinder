fontFace($name, fileName, styleOrWeight = normal, weight = 400)
  font-family: $name
  if styleOrWeight is a 'string' or styleOrWeight is a 'ident'
    font-style: styleOrWeight
    font-weight: weight
  else
    font-style: normal
    font-weight: styleOrWeight
  src: local($name), local(fileName), url(../fonts/fileName.woff2) format('woff2'), url(../fonts/fileName.woff) format('woff'), url(../fonts/fileName.ttf) format('truetype')

fontClass(name)
  direction: ltr
  display: inline-block
  font-family: name
  font-size: 24px
  font-style: normal
  font-weight: normal
  letter-spacing: normal
  line-height: 1
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility
  text-transform: none
  white-space: nowrap
  width: 1em
  word-wrap: normal
  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased
  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale
  /* Support for IE. */
  font-feature-settings: 'liga'

@font-face
  fontFace('Material Icons', 'MaterialIcons-Regular')

.material-icons
  fontClass('Material Icons')

  &.smallIcon
    font-size: 15px

  &.smallishIcon
    font-size: 18px

@font-face
  fontFace('Font Awesome', 'fontawesome-webfont')

.fontawesome-icons
  fontClass('Font Awesome')

