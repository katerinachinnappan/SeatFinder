.apim
  .detailsEditor
  .bx--modal
    .tagContainer
      background-color: rgba(61, 112, 178, .1)
      display: flex
      flex-wrap: wrap

      .tagContainer
        background-color: transparent

  .tagContainer
    > input
      flex: 1

    .tag.communityTag
      font-size: 12px
      height: 20px
      line-height: 20px

      button
        font-size: 12px
        margin-top: -4px
        vertical-align: top

      .tagLabel
        display: inline-block
        line-height: 20px
        vertical-align: top

    .communityTag
      margin-right: 10px

    .tag
      border-radius: 2px
      color: white
      font-size: small
      line-height: 15px
      padding: 5px 0 5px 10px

      &.favouriteTag
        background-color: rgb(252, 245, 202)
        color: black

      button.iconOnlyButton
        color: inherit

      img.deleteTag
        background-image: embedurl('../images/delete_tag.png')

    .tagChooser
      background: none
      border: 0 !important // @stylint ignore important
      box-shadow: none
      height: 31px
      margin: 0
      padding: 0
      width: 200px

    &.undeletable .deleteTagButton
      display: none

    .tagNode
      margin: 3px 6px 3px 0

      .iconNode
        display: none

      .deleteTagButton .iconOnlyButton .closeIcon
        background-image: none
        font-weight: bold
        height: auto
        width: auto

        &:before
          content: '\2715'

    &.tagDropdown
      padding: 10px

      .tagNode
        margin: 3px 0

      .deleteTagButton
        display: none

      .fixedWidthTag
        width: 150px

    .smallTag
      padding: 0 8px 0 5px

    .fixedTag
      height: 15px
      line-height: 15px
      padding: 5px

    .orgTag
      background-color: rgb(220, 234, 243)
      color: black

    .communityTag .tagNode .iconNode
      display: inline-block

  .filterColumn .tagContainer
    .fixedWidthTag
      width: 100%

    .layout
      apim-tag
        flex: 1

      .tagNode
        width: 100%

      input
        margin-right: 3px
        margin-top: 10px

  .compactTag .tagNode
    margin: 4px 2px 2px

    .closeIcon
      margin-left: -3px

    .deleteTagButton
      absolute: top 0 left 3px
      opacity: 0

    &:hover .deleteTagButton
      opacity: 1

    .tagLabel
      display: none

  .tagNode .tagLabel
    cursor: pointer
    vertical-align: middle

  .tagDialog
    .selectableTag
      cursor: pointer
      margin: 5px 0 10px
      min-width: 40px
      padding: 0 5px

      label
        cursor: pointer

      &:focus label
        outline: 1px dotted white !important // @stylint ignore important

    .title
      font-weight: bold
      padding: 5px 0

  .circleTag
    background-color: rgb(230, 233, 234)
    border-radius: 50%
    color: black
    font-weight: bold
    height: 12px
    line-height: 12px
    margin-top: 4px
    text-align: center
    vertical-align: top
    width: 12px

  .tag
    &.favourite
      background-color: rgb(252, 245, 202)

    &.untagged
      background-color: white
      color: black

  .resourceTagContainer
    ul
      margin: 0

    li
      width: 100%

      a
        box-sizing: border-box
        color: inherit
        display: inline-block
        padding: 1px 10px
        width: 100%

    .customTag
      padding: 6px 10px 0
      white-space: nowrap

    .scrollBox
      max-height: 100px
      overflow-x: visible
      overflow-y: auto
      padding: 1px 0

