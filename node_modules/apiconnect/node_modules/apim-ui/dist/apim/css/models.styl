.model-property-table
  tbody tr:hover // @stylint ignore colons
    border: 0
    box-shadow: none

    td
      box-shadow: none

  tr.deleted td
    opacity: .5

    &:before
      absolute: top 2rem left 0
      border-bottom: 1px solid #111
      content: ''
      width: 100%

  .md-input
    width: 100%

  > tbody
    > tr
      border: 0

    td
      line-height: 12px
      margin: 0
      position: relative

  .center
    text-align: center

  .md-errors-spacer
    display: none

  md-input-container
    margin: 0
    padding: 0
    width: 100%

  md-select
    margin: 0
    padding: 0

  md-checkbox
    margin: 0 0 0 10px
    padding: 0

.modal-dialog
  .modal-content
    p
      line-height: 1.75
      padding-bottom: 1em

