.apim
  .operationTitle
    background-color: #f8f8f8

    .path
      flex: 1
      line-height: 30px
      padding-left: 10px

    .get
      background-color: #4178BE
      color: #fff

    .put
      background-color: #D74108
      color: #fff

    .post
      background-color: #4B8400
      color: #fff

    .delete
      background-color: #AD1625
      color: #fff

    .options
      background-color: #734098
      color: #fff

    .patch
      background-color: #A36400
      color: #fff

    .head
      background-color: #008571
      color: #fff

    .method
      min-width: 70px
      padding: 5px
      text-align: center

    .operationRenderer .tags .tag
      color: #fff

    .operationTitle .path,
    .responseTitle .code
      padding-bottom: 5px
      padding-top: 5px

    .codeContainer
      width: 100%

    .apiEditor
      .row
        margin-left: inherit
        margin-right: inherit

      input[type='color'].form-control
        height: 34px

    .schemaPrefix
      align-self: flex-end
      padding-bottom: 8px

    button
      &.textOnlyButton.updateExtensionButton
        padding-top: 8px

    .navigate-properties table th
      &:first-of-type
        width: 30%

      &:last-of-type
        width: 5%

    .headerPadding
      padding-left: 25px
      padding-top: 25px

    .footerPadding
      padding: 10px 25px 25px
      text-align: right

    .sampleMargins
      border-color: #eee
      border-style: solid
      border-width: thin
      margin: 10px 25px

    .sampleMargins:hover
      background-color: #eee

    .sampleSelected
      background-color: #eee

  .sampleApiTitle
    font-weight: bold

  .categoryList textarea
    height: 100px
    width: 100%

  api-definition-property-list
    .bx--reponsive-table
      background: blue

  .revocationSwitch
    margin-left: 20px
    width: calc(100% - 30px)
