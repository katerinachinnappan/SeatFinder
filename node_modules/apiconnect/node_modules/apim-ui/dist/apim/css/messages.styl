.apim
  .messageArea
    background-color: #3C4647
    color: white
    height: 38px
    padding: 0 20px

    &.expandedMessages
      height: auto

    .message
      line-height: 38px

      .ERROR
        color: red
        font-weight: bold

      .SUCCESS
        color: #03fb03
        font-weight: bold

      .INFO
        font-weight: bold

    .closer
      color: white
      cursor: pointer
      font-weight: bold
      margin-left: 10px

  .messageList
    display: none
    margin-right: 20px
    max-height: 114px
    overflow-x: auto

  .errorMessage
    color: red

  .message
    display: flex

    .messageText
      flex: 1
      margin: 0 15px

    apiconnect-explorer .underMainBanner.stretch
      top: 140px

    .underTopBanner.stretch
      top: 98px

    .mapper-inputs-container,
    .mapper-outputs-container,
    .mapper-canvas
      height: calc(100vh - 234px)
