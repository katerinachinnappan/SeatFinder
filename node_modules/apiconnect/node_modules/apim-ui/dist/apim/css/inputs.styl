.apim
  input
    &[type=search]
      border: 1px solid #e0e0e0
      padding-left: 45px

    &[type=search] + button[type=reset]
      absolute: right 0
      z-index: 10

    &[type=text]
    &[type=search]
    &[type=password]
    &[type=url]
    &[type=email]
    &[type=number]
      box-sizing: border-box
      padding: 6px 5px 5px
      width: 100%

  .searchBanner input[type=search]
      border: 0
      border-left: 1px solid #e0e0e0
      border-right: 1px solid #e0e0e0
      height: 49px
      padding: 15px 5px 14px 45px

  .actionSection
    .searchBanner input[type=search]
        border-right: none

  .layout input[type=search]
      height: 100%

  .importDialog
    .bx--search
      input[type=search]
        background-position-x: 10px
        border: 0
        padding-left: 40px

      button
        height: 2.75rem

  .filterBoxContainer
    apim-assembler
    .policyList
    .filterBox
      padding-left: 46px

.bx--number__arrow--up
  top: .5rem

.bx--number__arrow--down
  top: 1.5rem

.bx--number__input
  min-width: auto

.bx--number__arrow, .bx--number__arrow--up, .bx--number__arrow--down
  padding-right: .5rem

.bx--select__input
  margin-bottom: 2rem

.margin-right-10
  margin-right: 10px

.input-group
  width: 100%

  .iconOnlyButton
    position: absolute
    right: 0
    top: 10px
    z-index: 10
