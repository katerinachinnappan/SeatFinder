.apim
  .add-new-project
    padding: 2rem

    .spinner-container
      display: inline-block
      margin-right: 1rem
      position: relative
      size: 2rem

      .spinner
        absolute: top .5rem
        display: inline-block
        margin: 0
        size: 2rem

    h1
      line-height: 1.2

    md-input-container.has-link
      position: relative

      input
        width: 80%

      a.open-filepicker
        absolute: top 3px right 0

  .projects-menu
    .navHeader
    .navItem
      position: relative

      .display-name
        display: inline-block
        overflow-x: hidden
        text-overflow: ellipsis
        white-space: nowrap
        width: 76%

      .pill
        position: absolute
        right: 2.4rem


    .delete-project
      absolute: top .8rem right .9rem

    .navItem
      .delete-project
        display: none

        i
          font-size: 1.2rem

      &:hover .delete-project
        display: block

        &:hover
          color: $apim-navitem-delete-hover-color

      &.selected .delete-project
        display: none

    .dropdown
      absolute: top 0 right .5rem

      .dropdown-menu
        absolute: left -215px

        .pill
          position: relative
          right: auto

// @deprecated
  .projects-filepicker-deprecated
    .files
      margin-bottom: 2rem
      max-height: 60vh
      overflow-y: auto
      padding-left: 0

      li:nth-child(odd)
        background-color: $apim-filepicker-odd-bg

      .selected
        a
          background: $apim-filepicker-selected-bg
          color: $apim-filepicker-selected-color

        .material-icons.directory
        .material-icons.file
        .material-icons.symlink
          color: $apim-filepicker-selected-icon-color

      li
        display: flex
        flex-direction: column
        justify-content: center
        resize: vertical

      li > span, li > a
        color: $apim-filepicker-file-color
        padding: .2rem 1rem
        resize: vertical
        text-decoration: none

      .material-icons
        font-size: inherit

        &.directory
          color: $apim-filepicker-icon-directory-color

        &.file, &.symlink
          color: $apim-filepicker-icon-file-color

    .cwd
      white-space: pre-wrap
      word-break: break-all
      word-wrap: break-word

#new-project-form
  footer
    display: flex
    justify-content: space-between
    margin-top: 1rem

    &.no-tertiary
      justify-content: flex-end

  .project-settings & footer
    justify-content: flex-end
