.apim-topnav-menu
  display: inline-block
  flex: 1
  min-width: 500px
  text-align: right
  white-space: nowrap

  .main-nav-button-container
    border-left: 1px rgba(255, 255, 255, .2) solid
    display: inline-block
    height: 60px
    padding: 16px 12px 0
    vertical-align: top

    &:nth-child(1)
      border-left: 0

    button
      .material-icons
        color: rgba(255, 255, 255, .7)

      .nav-label
        color: rgba(255, 255, 255, .7)
        display: inline-block
        font-size: 14px
        margin-left: 4px
        vertical-align: top

      &:hover
        .material-icons
        .nav-label
          color: white

    .staging-dropdown
      .dropdown-menu
        min-width: 300px

        .select-other-target
          margin: 5px 0 0
          padding-top: 15px

      .material-icons
        margin-right: 5px

      .nav-label
        margin-top: 3px

  .right-nav-button-container
    border-left: 1px rgba(255, 255, 255, .2) solid
    display: inline-block
    height: 60px
    padding: 16px 20px 0 12px
    vertical-align: top

    .material-icons
      width: 28px
