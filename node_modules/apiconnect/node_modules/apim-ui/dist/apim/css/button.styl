.apim
  button
    border-radius: 0
    font-weight: bold
    line-height: 26px
    min-height: 28px
    min-width: 60px

    .searchBanner button + button
      margin-left: 10px

    &.bxAddApiText
      color: white

    &.dangerous
      border: 1px solid #fd2493
      color: #fd2493

    &.slimline
      line-height: 20
      min-height: 20
      min-width: 20

    &:disabled
      &
      &.cancelButton
        border-color: rgba(0, 0, 0, .1)
        color: rgba(0, 0, 0, .2)
        cursor: not-allowed

    &.textOnlyButton
    &.buttonAndLabel
    &.iconOnlyButton
      background: none
      border: 0
      font-weight: normal
      min-width: 1em
      width: auto

      &:not(:disabled)
        cursor: pointer

    &.highVisButton
      &.textOnlyButton
      &.buttonAndLabel
      &.iconOnlyButton
        &:not(:disabled)
          color: inherit

    &.roleListDeleteButton
      padding-right: 19px
      width: 1em

    &.iconOnlyButton
      &:disabled
        color: rgb(200, 200, 200)
        cursor: not-allowed

      &.whiteButton:not(:disabled)
        color: rgba(255, 255, 255, .7)

        &:hover
        &:focus
          color: white

      img
        padding: 8px

        &.searchIcon
          display: block
          height: 0
          padding: 13px
          width: 0

    &.textOnlyButton
      padding: 0

      &:not(:disabled)

        &:hover
        &:focus
          text-decoration: underline

        &.whiteButton
          color: rgba(255, 255, 255, .7)

      .buttonLabel
        font-size: medium
        margin-left: 5px

      img
        padding: 12px

    &.textOnlyButton
    &.iconOnlyButton
      img
        height: 0
        width: 0

      div
        display: inline-block
        vertical-align: middle

    &.labelledIcon div
      display: inline-block
      vertical-align: middle

      &.material-icons
        margin-right: 5px

    &.cancelButton
      border: 0
      color: grey

      &:not(:disabled)
        &:hover
        &:focus
          background-color: white
          border: grey 1px solid
          color: black

  .helpDialog button
    background-color: transparent
    border: 1px solid white
    color: white

    &:not(:disabled)
      &:hover
      &:focus
        background-color: white
        color: #3f3f3f

  .bannerActions button.iconOnlyButton:not(:disabled):hover
    background-color: inherit

  .mainBanner
  .bannerActions
    &.iconOnlyButton:not(:disabled):focus
      background-color: inherit
      outline: 1px dotted white

  .searchBanner button
    height: 100%
    margin-left: 0
    margin-right: 0
    padding: 0 20px

  button.bx--search__toggle-layout
    height: 3em
    margin: 0

  .searchBanner
    .bx--btn
      height: 100%
      margin: 0

    .dropdown
      .bx--btn
        height: 50px

      &.registryMenu
        .bx--btn
          height: 45px

  .sectionTitleBanner .bx--btn
    height: 100%

  .sectionToggle
    border-right: 1px solid #e5e5e5
    font-size: 16px
    padding-top: 8px

  .actionSection .bx--btn
    height: 100%

  button.bx--search__sort
    margin: 0

  .bx--search__sort.bx--overflow-menu
    height: 3em
    margin-right: 0

  .actionSection .buttonArea
    height: 100%

  .bx--btn.open-filepicker
    &:button
      position: relative
      top: .23rem

  .bx--btn--right-icon__icon
    fill: $white

  .bx--btn.open-filepicker
    position: relative
    top: .25rem

  .paymentGatewaysCollection .buttonArea
    display: inline-block
    float: right

  .addScopeButton
    float: right
    margin: 20px 20px 0 0

  .deleteScopeButton
    float: right
