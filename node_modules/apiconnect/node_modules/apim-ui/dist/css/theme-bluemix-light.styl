.apim.bluemix

  a
  select
  .highlightText
  .highlightTextContainer:hover .hoveredHighlightText
  .hoveredHighlightText:hover
    color: $text-link-light

  .toc
    .tocItem .selected:before
      background-color: $text-link-light

    a:not(.selected)
      color: $text-primary-light

  .secondaryBackground
  .minorColumnRight
  .unselectedCollectionContent
  .tableHeaderBackground
  .toc
    background-color: $background-secondary-light

  .searchCollection
    .searchInput
    .searchIcon
      background-color: $background-secondary-light

  /** buttons **/
  button
    &.textOnlyButton
      &:not(:disabled)
        background: rgba(0, 0, 0, 0) none repeat scroll 0 0
        color: $text-link-light

      &:hover
      &:focus
        text-decoration: underline

    &.buttonAndLabel
    &.iconOnlyButton
      &.propertyRequired // @stylint ignore colons
        background-color: #4278bf
        border-radius: 50%

      &:not(:disabled)
        color: rgba(0, 0, 0, .5)

        &:hover
        &:focus
          background-color: transparent
          color: $text-link-light

    + button.iconOnlyButton.dropdown-toggle
      color: $text-link-light

  /** nav banner **/
  .mainBanner
    md-sidenav
      h1
      header
        background-color: #263943
        overflow: visible !important // @stylint ignore important

    .navigationMenu
      > li.highlightMenu a h5
        background-color: #f0f3f6
        color: $text-link-light
        font-weight: bold

      .navItem a
        padding-left: 20px

        &:hover
        &:focus
          background-color: #f0f3f6
          color: $text-link-light

      a
        text-decoration: none

        h5
          &:hover
          &:focus
            background-color: #f0f3f6
            color: $text-link-light

    nav.titleBanner
      background-color: #263943
      overflow: visible !important // @stylint ignore important

    .titleBanner .logo a
      color: white

    .subBanner a.backLink
      color: $text-link-light

    .subBanner button span.caret
      color: $text-link-light

    .selected
      md-icon
        fill: $text-link-light

  nav.subBanner
    background-color: $background-secondary-light
    color: $text-primary

    .menuList li.selected
      border-color: $text-link-light
      opacity: 1

      a
        color: $text-link-light

  /** drop-downs **/
  .dropdown-menu li a
    color: #333

    &:hover
    &:active
      background-color: #f0f3f6
      color: $text-link-light

  /** material styles **/
  md-slider
    .md-thumb:after
      border-color: $text-link-light

    .md-sign:after
      border-top-color: $text-link-light

  md-input-container
    &.md-input-focused
      label:not(.md-no-float)
        color: $text-link-light

    &:not(.md-input-invalid).md-input-focused .md-input
      border-color: $text-link-light

  md-radio-button
    .md-off
      border-color: $text-link-light

    &:not([disabled]).md-primary
      &.md-checked .md-off
        border-color: $text-link-light

      .md-on
        background-color: $text-link-light

  md-slider
    .md-track.md-track-fill
    .md-thumb:after
    .md-sign
      background-color: $text-link-light

  md-switch.md-checked .md-bar
    background-color: $text-link-light

  md-checkbox.md-primary.md-checked:not([disabled]) .md-icon
    background-color: $text-link-light

  /** getting started menu **/
  .gettingStarted
    md-bottom-sheet.md-list
      background-color: white
      box-shadow: 0 0 12px rgba(0, 0, 0, .15)

      .md-subheader
        background-color: #4178BE
        border-color: #4178BE
        color: white

      md-list-item
        border-bottom: 1px solid rgba(216, 216, 216, .25)

        .md-list-item-content
        .material-icons
          &:hover
            text-decoration: underline

        &.disabled
          cursor: not-allowed
          pointer-events: none

          .md-list-item-content
          .material-icons
            color: #888 !important // @stylint ignore important
            cursor: not-allowed

          > div
            cursor: not-allowed
            pointer-events: none

        &.completed

          .md-list-item-content
            color: #444 !important // @stylint ignore important

          .material-icons
            color: green !important // @stylint ignore important

    &.secureGatewayTour .wraplist .md-list-item-content:hover
      color: $text-link-light

  .gettingStartedMinimized
    .md-button.md-fab
      background-color: $text-link-light
      border:0

      &:hover
        background-color: $text-link-light

  .tooltipContainer .tooltip .tooltip-arrow:after
    color: $text-link-light

  /** assembly **/
  apim-assembler .assemblerCanvas
    background-color: $background-secondary-light

  /** catalog **/
  .catalogItem h1
    color: $text-link-light

  /** details page **/
  .detailsEditor
    background-color: $background-secondary-light

  .detailsContainer h2
    color: $text-link-light

  /** spinner icon **/
  .spinner
    background: #fff
    background: linear-gradient(left, $text-link-light 10%, rgba(255, 255, 255, 0) 42%)

    &:before
      background-color: $text-link-light

  .secondaryBackground .spinner
    background-color: $background-secondary-light

    &:after
      background-color: $background-secondary-light

  /** file selector **/
  .fileSelector:not(.fileSelected) .btn
  .fileSelector.fileSelected.showAsIcon .fileSelect
    border: 1px solid $text-link-light
    color: $text-link-light

    &:hover
      background: $text-link-light
      color: white

  .showAsIcon .fileSelect span
    color: $text-link-light

  .environmentDetails .registryMenu button:focus
    border-bottom: 2px solid $text-link-light

  .usersCollection a.secondaryText
    color: $text-link-light

  .rightArrow:hover
  .leftArrow:hover
    background-color: $text-link-light
    color: white

  .card .approveComment div:hover
    color: $text-link-light

  .feedbackBox .contentArea .ratingBox .selected .material-icons
    color: $text-link-light
    font-size: 64px

  .comboBox
    input:focus
      border-color: $text-link-light

      + .input-group-btn button
        border-color: $text-link-light

  .messageArea .INFO
    color: $text-link-light

  .pagination >
  .active >
    a
    a:hover
    a:focus
    span
    span:hover
    span:focus
      background-color: $text-link-light
      border-color: $text-link-light

    li > // @stylint ignore colons
      a
      span
        &:hover
        &:focus
          color: $text-link-light
