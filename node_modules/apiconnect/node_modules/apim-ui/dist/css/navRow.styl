.navRow
  .webapi &
    border-collapse: collapse
    border-style: solid
    border-width: 0 0 1px 0 !important // @stylint ignore important
    font-family: 'HelveticaNeue-Light', 'Helvetica Neue Light', 'Helvetica Neue', 'Helvetica', Arial, 'Lucida Grande', sans-serif
    font-weight: 100
    min-height: 33px
    padding: 12px 15px
    position: relative

  .notification
    color: #fffdfc
    cursor: pointer
    float: right
    font-weight: bold
    margin: 3px 0 0 20px
    padding-top: 2px
    text-align: center

  .mobile & .notification
    absolute: top 10px right 10px
    float: none

  .navItem
    border: 1px solid
    font-size: medium
    margin-right: -1px
    padding: 2px 20px

    a
      color: inherit

      &:hover
        text-decoration: none

    &:first-child
      border-bottom-left-radius: 5px
      border-top-left-radius: 5px

    &:last-child
      border-bottom-right-radius: 5px
      border-top-right-radius: 5px

  .notificationBox
    &:after
    &:before
      absolute: top 100% left 50%
      border: solid transparent
      content: ' '
      pointer-events: none
      size: 0

    &:after
      border-color: rgba(213, 50, 17, 0)
      border-top-color: #ad0e0e
      border-width: 4px
      margin-left: -4px

    &:before
      border-color: rgba(194, 225, 245, 0)
      border-top-color: #ad0e0e
      border-width: 7px
      margin-left: -7px

    &.greyBox
      &:after
        border-top-color: #dddee0

      &:before
        border-top-color: #dddee0

  .separator
    margin: 5px 10px 0
    size: 2px 21px
