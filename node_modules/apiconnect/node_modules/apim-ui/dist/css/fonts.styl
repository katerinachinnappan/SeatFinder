html
body.apim
  font-family: 'IBM Helvetica', 'Helvetica Neue', Helvetica, Arial, sans-serif !important // @stylint ignore important
  font-size: 16px

.apim
  h1
  h2
  h3
  h4
  h5
  h6
    background-color: transparent
    font-weight: normal
    margin: 0

  h1
    font-size: 1.7em
    line-height: 60px
    margin-right: 15px

  h2
    font-size: 1.4em
    line-height: 1.4em

  h3
    font-size: 1.3em

  h4
    font-size: 1.2em

  h5
    font-size: 1.1em
    font-weight: bold

  h6
    font-size: 1em

  .subBanner h3
    font-size: 16px

  legend
    font-size: 14px

  label:not([class*='bx--'])
    display: inline
    font-size: 12px
    font-weight: normal
    margin-bottom: 0

  .secondaryText
    font-size: .9em

  a
    cursor: pointer
    text-decoration: none

    &:hover
      text-decoration: underline

  b
    background-color: inherit
    color: inherit

  select.fat
    font-size: 1.3em

  .buttonAndLabel
    font-size: 14px

  .documentName
  .documentNameLink
    font-weight: bold

  .documentName
  .documentNameLink
  .documentNameLight
  .documentNameLinkLight
    word-wrap: break-word

  .highlightText
    margin-left: 3px

  .lockingSection
    &
    button
      font-size: 1.2em

  .analyticsSearchPage
    .labelText
      font-size: 10px
      text-align: right
      text-overflow: ellipsis
      word-wrap: break-word

    .statsText
      -webkit-background-clip: text
      -webkit-text-fill-color: transparent // @stylint ignore valid
      background: -webkit-linear-gradient(#A5A5A5 27%, #858585 82%)
      color: #686868
      font-size: 2.5em
      font-weight: bold
      vertical-align: top

  .resourceHeader
    font-size: 16px
    font-weight: bold

  .versionCount
    font-size: 12px

  .productDetails
    .oauthUrlLabel
    .oauthUrl
      font-weight: normal
      vertical-align: top

  .apiPath
    font-weight: bold

  .versionDropdown button
    font-size: medium

  .statusText
    font-size: 15px

  .nameColumn .userName
    font-size: 1.5em
    word-wrap: break-word

  .manageRoles .permissionList .permissionListItem h5
    font-weight: bold

  .manageRoles .roleList .roleListItem .description
  .environmentsCollection .roleList .roleListItem .description
  .sslProfilesCollection .roleList .roleListItem .description
    color: #60686a
    font-size: 12px
    word-wrap: break-word

  .productName
  .titleText
    font-weight: 200 !important // @stylint ignore important

  .manageRoles .permissionList .permissionListItem > .label
    font-size: 100%
    font-weight: normal
